<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Minha Agenda</title>

    <!-- Add to homescreen for Chrome on Android -->
    <meta name="mobile-web-app-capable" content="yes">
    <link rel="icon" sizes="192x192" href="images/logo.png">

    <!-- Add to homescreen for Safari on iOS -->
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-title" content="Material Design Lite">
    <link rel="apple-touch-icon-precomposed" href="images/logo.png">

    <link rel="stylesheet" type="text/css" href="/stylesheets/roboto-font.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/material.min.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/myStyle.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
</head>

<body>
    <!-- Always shows a header, even in smaller screens. -->
    <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
        <header class="mdl-layout__header">
            <div class="mdl-layout__header-row">
                <!-- Title -->
                <span class="mdl-layout-title" href="/">Minha Agenda</span>
            </div>
        </header>
        <div class="mdl-layout__drawer">
            <span class="mdl-layout-title">Minha Agenda</span>
            <nav class="mdl-navigation">
                <a class="mdl-navigation__link" href="/">Dashboard</a>
                <a class="mdl-navigation__link" href="">Calendário</a>
                <a class="mdl-navigation__link" href="login">Login</a>
                <a class="mdl-navigation__link" href="signup">Cadastro</a>
                <a class="mdl-navigation__link" href="logout">Sair</a>
            </nav>
        </div>
        <main class="mdl-layout__content">
            <div class="panel-content app-content">
                <!-- Conteúdo do site -->
                <div class="mdl-grid app-grid">
                    <!-- Título dos lembretes -->
                    <div class="mdl-card events-title mdl-cell mdl-cell--12-col mdl-shadow--4dp">
                        <div class="mdl-typography--title">
                            Lembretes
                        </div>
                        <div class="mdl-layout-spacer"></div>
                        <button class="mdl-button mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--accent" id="button-add-event">
                            <i class="material-icons" style="font-size: 30px">add</i>
                        </button>
                    </div>
                    <!-- Lista de lembretes -->
                    <div class="events-list mdl-cell mdl-cell--12-col mdl-grid">
                        <!-- Event Template -->
                        <div class="mdl-card event-template event-card mdl-cell mdl-cell--12-col mdl-color-text--white" hidden id="event">
                            <div>
                                <div class="title mdl-typography--font-medium"></div>
                                <div class="time"></div>
                            </div>
                            <div class="mdl-layout-spacer"></div>
                            <div class="date"></div>
                        </div>
                    </div>
                    <!-- Título das notícias -->
                    <div class="mdl-card news-title mdl-cell mdl-cell--12-col mdl-shadow--4dp">
                        <div class="mdl-typography--title">
                            Notícias
                        </div>
                        <div class="mdl-layout-spacer"></div>
                        <button class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--accent" id="button-interests">
                            <i class="material-icons">settings</i>
                        </button>
                    </div>
                    <!-- Lista de notícias -->
                    <div class="news-list mdl-cell mdl-cell--12-col mdl-grid">
                        <!-- Template de Notícia -->
                        <div class="mdl-card news-template news-card mdl-cell mdl-cell--6-col" hidden>
                            <div class="mdl-card__media"></div>
                            <div class="mdl-card__supporting-text mdl-color-text--grey-600"></div>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <!-- Dialog para novo Evento-->
        <dialog class="mdl-dialog" id="addEventDialog">
            <h4 class="mdl-dialog__title">Novo lembrete</h4>
            <div class="mdl-dialog__content">
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <input class="mdl-textfield__input" type="text" id="newEventName">
                    <label class="mdl-textfield__label" for="newEventName">Título</label>
                </div>
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <input class="mdl-textfield__input" type="text" id="newEventDescription">
                    <label class="mdl-textfield__label" for="newEventDescription">Descrição</label>
                </div>
                <div class="mdl-textfield mdl-js-datefield mdl-textfield--floating-label">
                    <input class="mdl-textfield__input" type="date" id="newEventDate">
                    <label class="mdl-textfield__label" for="newEventDate"></label>
                </div>
                <div class="mdl-textfield mdl-js-timefield mdl-textfield--floating-label">
                    <input class="mdl-textfield__input" type="time" id="newEventTime">
                    <label class="mdl-textfield__label" for="newEventTime"></label>
                </div>
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <input class="mdl-textfield__input" type="text" id="newEventPlace">
                    <label class="mdl-textfield__label" for="newEventPlace">Lugar</label>
                </div>
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <select class="mdl-textfield__input" id="newEventColor">
                        <option value="amarelo">amarelo</option>
                        <option value="vermelho">vermelho</option>
                        <option value="verde">verde</option>
                        <option value="azul">azul</option>
                    </select>
                    <label class="mdl-textfield__label" for="newEventColor">Cor</label>
                </div>
            </div>
            <div class="mdl-dialog__actions">
                <button type="button" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect" id="button-confirm-event">Salvar</button>
                <button type="button" class="mdl-button mdl-js-button mdl-js-ripple-effect" id="button-cancel-event">Cancelar</button>
            </div>
        </dialog>

        <!-- Dialog para editar Evento-->
        <dialog class="mdl-dialog" id="editEventDialog">
            <h4 class="mdl-dialog__title">Lembrete</h4>
            <div class="mdl-dialog__content">
                <div id="editEventID" hidden></div>
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <input class="mdl-textfield__input" type="text" id="eventName">
                    <label class="mdl-textfield__label" for="newEventName">Título</label>
                </div>
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <input class="mdl-textfield__input" type="text" id="eventDescription">
                    <label class="mdl-textfield__label" for="newEventDescription">Descrição</label>
                </div>
                <div class="mdl-textfield mdl-js-datefield mdl-textfield--floating-label">
                    <input class="mdl-textfield__input" type="date" id="eventDate">
                    <label class="mdl-textfield__label" for="newEventDate"></label>
                </div>
                <div class="mdl-textfield mdl-js-timefield mdl-textfield--floating-label">
                    <input class="mdl-textfield__input" type="time" id="eventTime">
                    <label class="mdl-textfield__label" for="newEventTime"></label>
                </div>
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <input class="mdl-textfield__input" type="text" id="eventPlace">
                    <label class="mdl-textfield__label" for="newEventPlace">Lugar</label>
                </div>
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <select class="mdl-textfield__input" id="eventColor">
                        <option value="amarelo">amarelo</option>
                        <option value="vermelho">vermelho</option>
                        <option value="verde">verde</option>
                        <option value="azul">azul</option>
                    </select>
                    <label class="mdl-textfield__label" for="eventColor">Cor</label>
                </div>
            </div>
            <div class="mdl-dialog__actions">
                <button type="button" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect" id="button-confirm-editEvent">Salvar</button>
                <button type="button" class="mdl-button mdl-js-button mdl-js-ripple-effect" id="button-cancel-editEvent">Cancelar</button>
            </div>
        </dialog>

        <!-- Dialog para editar os Interesses-->
        <dialog class="mdl-dialog" id="interestsDialog">
            <h4 class="mdl-dialog__title">Interesses</h4>
            <div class="mdl-dialog__content">
                <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="business-checkbox">
                    <input type="checkbox" id="business-checkbox" class="mdl-checkbox__input">
                    <span class="mdl-checkbox__label">Negócios</span>
                </label>
                <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="entertainment-checkbox">
                    <input type="checkbox" id="entertainment-checkbox" class="mdl-checkbox__input">
                    <span class="mdl-checkbox__label">Entertenimento</span>
                </label>
                <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="general-checkbox">
                    <input type="checkbox" id="general-checkbox" class="mdl-checkbox__input">
                    <span class="mdl-checkbox__label">Geral</span>
                </label>
                <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="health-checkbox">
                    <input type="checkbox" id="health-checkbox" class="mdl-checkbox__input">
                    <span class="mdl-checkbox__label">Saúde</span>
                </label>
                <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="science-checkbox">
                    <input type="checkbox" id="science-checkbox" class="mdl-checkbox__input">
                    <span class="mdl-checkbox__label">Ciência</span>
                </label>
                <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="sports-checkbox">
                    <input type="checkbox" id="sports-checkbox" class="mdl-checkbox__input">
                    <span class="mdl-checkbox__label">Esporte</span>
                </label>
                <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="technology-checkbox">
                    <input type="checkbox" id="technology-checkbox" class="mdl-checkbox__input">
                    <span class="mdl-checkbox__label">Tecnologia</span>
                </label>
            </div>
            <div class="mdl-dialog__actions">
                <button type="button" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect" id="button-confirm-interests">Salvar</button>
                <button type="button" class="mdl-button mdl-js-button mdl-js-ripple-effect" id="button-cancel-interests">Cancelar</button>
            </div>
        </dialog>
    </div>

    <!-- Insert link to app.js here -->
    <script src="/javascripts/material.min.js"></script>
    <script src="/javascripts/dashboardPage.js"></script>
</body>

</html>